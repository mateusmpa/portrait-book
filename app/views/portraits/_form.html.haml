= simple_form_for @portrait, html: { multpart: true } do |f|
  - if @portrait.errors.any?
    #errors
      %h2
        = pluralize(@portrait.errors.count, "errors")
        prevent this Portrait from saving
        %ul
          - @portrait.errors.full_messages.each do |msg|
            %li= msg

  .form-group
    = f.input :image, input_html: { class: 'form-control' }

  .form-group
    = f.input :title, input_html: { class: 'form-control' }

  .form-group
    = f.input :description, input_html: { class: 'form-control' }

  = f.button :submit, class: "btn btn-primary"
